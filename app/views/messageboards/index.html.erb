
	<div style="padding-bottom:15px;">
		<span  style="font-size:23px;font-weight: bold;">Listing MessageBoards</span>
		<%= link_to 'New', new_messageboard_path ,class: 'btn'%>
	</div>

	<table border="1px" class="table table-bordered"  >
	  <thead>
		<tr>
		  <th>Title</th>
		  <th>Body</th>
		  <th>Createdat</th>
		  <th colspan="3"></th>
		</tr>
	  </thead>

	  <tbody>
		<% @messageboards.each do |messageboard| %>
		  <tr>
			<td><%= messageboard.title %></td>
			<td><%= messageboard.body %></td>
			<td><%= messageboard.createdat %></td>
			<td><%= link_to 'Show', messageboard,:class=>'btn' %></td>
			<td><%= link_to 'Edit', edit_messageboard_path(messageboard),:class=>'btn' %></td>
			<td><%= link_to 'Destroy' ,  messageboard, method: :delete, data: { confirm: 'Are you sure?' },:class=>'btn btn-danger' %></td>
		  </tr>
		<% end %>
	  </tbody>
	</table>




