<div width="100%"   style="height: 30px;background-color:black;padding-top:10px;padding-left:50px" >
	<span style="color:grey;">kadal</span>
</div>

<div style="padding-left:50px;padding-top:15px;">
	<div style="padding-bottom:15px;">
		<span  style="font-size:23px;font-weight: bold;">Listing MessageBoards</span>
		<%= link_to 'New', new_messageboard_path %>
	</div>

	<table border="1px"  >
	  <thead>
		<tr>
		  <th>Title</th>
		  <th>Body</th>
		  <th>Createdat</th>
		  <th colspan="3"></th>
		</tr>
	  </thead>

	  <tbody>
		<% @messageboards.each do |messageboard| %>
		  <tr>
			<td><%= messageboard.title %></td>
			<td><%= messageboard.body %></td>
			<td><%= messageboard.createdat %></td>
			<td><%= link_to 'Show', messageboard %></td>
			<td><%= link_to 'Edit', edit_messageboard_path(messageboard) %></td>
			<td><%= link_to 'Destroy', messageboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  </tr>
		<% end %>
	  </tbody>
	</table>

</div>


