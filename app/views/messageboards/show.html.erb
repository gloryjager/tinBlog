<div width="100%"   style="height: 30px;background-color:black;padding-top:10px;padding-left:50px" >
	<span style="color:grey;">kadal</span>
</div>

<div style="padding-left:50px;padding-top:15px;">
	<h1>Editing MessageBoard &nbsp; <%= @messageboard.id %></h1>
	<p id="notice"><%= notice %></p>

	<p>
	  <strong>Title:</strong></br>
	  <%= @messageboard.title %>
	</p>

	<p>
	  <strong>Body:</strong></br>
	  <%= @messageboard.body %>
	</p>


	<h1>Comments</h1>  
	  
	<% @messageboard.comments.each do |comment| %>  
	  <span><%= comment.text %></span>  
	  <span><%= link_to "Destory", [@messageboard, comment], :method => :delete, :confirm => "Are you sure?" %></span>  
	<% end %>  
	  
	<%= form_for [@messageboard,@messageboard.comments.build] do |f| %>  
	  <p><%= f.text_area :text, :size => '40x10' %> </p>  
	  <p><%= f.submit "Add Comment" %> </p>  
	<% end %>  

	<%= link_to 'Edit', edit_messageboard_path(@messageboard) %> |
	<%= link_to 'Back', messageboards_path %>
</div>
